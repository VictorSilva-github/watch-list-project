<div class="m-4">
  <h1>Watch List</h1>
  <p></p>


<ul>
  <% @lists.each do |list| %>
    <div class="d-flex">
    <h4> <%= link_to list.name, list_path(list) %> </h4>
    <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } do %>
          <i class="fa-solid fa-trash fa-sm ms-2"> </i>
        <% end %>
    </div>
  <% end %>
</ul>

<strong ><p> <%= link_to "Create List", new_list_path, class:"btn btn-primary "%> </p> </strong>
</div>

