<div class="card-category " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.thepcdoctor.com.au/wp-content/uploads/2020/12/Sci-Fi-Movies.jpg)">
  <h3><%= @list.name %></h3>
</div>


<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <div class=" m-3 border p-2">
      <%= image_tag bookmark.movie.poster_url, width: 200, height: 200 %>
      <div class="d-flex">
        <h4>Movie Name: <%= bookmark.movie.title %> </h4>
        <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?" } do %>
          <i class="fa-solid fa-trash fa-sm ms-2"> </i>
        <% end %>
      </div>
      <h6>Comment: <%= bookmark.comment %></h6>
      <p></p>
    </div>
  <% end %>
</ul>
<br>


<strong ><p> <%= link_to "Add Movie", new_list_bookmark_path(@list), class:"btn btn-primary "%></p> </strong>

<p><%= link_to 'Back To Main Page', root_path, class:"btn btn-primary pt-10" %> <i class="fa-solid fa-house-crack"></i></p>
</div>



